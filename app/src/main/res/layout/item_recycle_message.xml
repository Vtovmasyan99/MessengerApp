<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="8dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal"
    android:gravity="left"
    android:layout_marginTop="4dp">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_avatar_message_room"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/avatar_male" />

        <TextView
            android:id="@+id/tv_nickname_message_room"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nickname"
            android:textSize="8sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#F4FDF7">

        <TextView
            android:id="@+id/tv_message_time_chatroom"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:textSize="10sp"
            android:gravity="end"
            android:textColor="@color/black"
            android:text="2021/01/01" />

        <TextView
            android:id="@+id/tv_message_text_chatroom"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="@string/sentence1"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="italic"/>
    </LinearLayout>


</LinearLayout>