<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingLeft="10dp">

    <LinearLayout
        android:id="@+id/linear_layout_my_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="#A2F6BA"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/tv_my_message_time_chatroom"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:textSize="10sp"

            android:gravity="end"
            android:textColor="@color/black"
            android:text="2021/01/01" />

        <TextView
            android:id="@+id/tv_my_message_text_chatroom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="end"
            android:textColor="@color/black"
            android:text="@string/sentence1"
            android:textSize="22sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_filename_chatroom"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="document_1.txt   download"
            android:visibility="gone" />

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/vv_my_video_send_chatroom"
            android:visibility="gone" />
    </LinearLayout>
    <ImageView
        android:layout_gravity="end"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_my_image_send_chatroom"
        android:src="@drawable/image1"
        android:visibility="gone"
        />


    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_my_avatar_message_room"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/tv_my_nickname_message_room"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nickname"
            android:textSize="8sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>