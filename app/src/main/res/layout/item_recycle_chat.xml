<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:id="@+id/layout_root_chat">

    <ImageView
        android:id="@+id/iv_avatar_chat_chats"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/avatar_male" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nickname_box_chats"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            >

            <TextView
                android:id="@+id/tv_nickname_chats"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nickname"
                android:textSize="22sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_last_speak_time_text"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:gravity="end"
                android:layout_marginEnd="20dp"
                android:text="2021/01/01" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
        <TextView
            android:id="@+id/tv_last_speak_text_chats"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="15sp"
            android:gravity="left"
            android:layout_margin="4dp"
            android:text="@string/sentence1" />
    </LinearLayout>


</LinearLayout>
