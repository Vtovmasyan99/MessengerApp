<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.messenger">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/messenger_icon2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/messenger_icon2"
        android:supportsRtl="true"
        android:theme="@style/Theme.Homework2">
        <activity android:name="com.example.messenger.activities.RegisterActivity"></activity>
        <activity android:name="com.example.messenger.activities.LoginActivity">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name="com.example.messenger.activities.MainActivity">

        </activity>
    </application>

</manifest>